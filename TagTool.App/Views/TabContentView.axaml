<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:TagTool.App.ViewModels"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="TagTool.App.Views.TabContentView">

    <Design.DataContext>
        <viewModels:TabContentViewModel />
    </Design.DataContext>

    <Grid
        ColumnDefinitions="400"
        RowDefinitions="Auto,Auto,*,*"
        Margin="4">

        <StackPanel Orientation="Horizontal">
            <Button Content="AddFav1" />
            <Button Content="AddFav2" />
        </StackPanel>

        <Panel Grid.Row="1">
            <TextBox
                Name="SearchTextBox"
                Text="{Binding SearchText}"
                BorderBrush="{Binding $self.Foreground}"
                BorderThickness="1"
                Watermark="Enter Tag name"
                Margin="8">
                <!-- assists:TextFieldAssist.CornerRadius="32" -->
                <!-- Classes="Solo" -->

                <TextBox.InnerLeftContent>
                    <Border
                        Height="{Binding $parent[TextBox].Height}"
                        Width="{Binding $self.Bounds.Height}">

                        <!-- <avalonia:MaterialIcon -->
                        <!--     HorizontalAlignment="Center" -->
                        <!--     VerticalAlignment="Center" -->
                        <!--     Kind="Magnify" -->
                        <!--     Width="20" -->
                        <!--     Height="20" /> -->

                    </Border>
                </TextBox.InnerLeftContent>
            </TextBox>

        </Panel>
        <ListBox Grid.Row="3">
            <!-- IsOpen="{Binding #SearchTextBox.IsFocused}" -->
            <!-- IsLightDismissEnabled="True" -->
            <!-- PlacementTarget="{Binding #SearchTextBox}"> -->

            <ListBox Items="{Binding TagsSearchResults}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <RichTextBlock
                            Text="{Binding MatchedText}"
                            Inlines="{Binding Inlines}" />

                    </DataTemplate>

                </ListBox.ItemTemplate>
            </ListBox>
        </ListBox>
        <ListBox Grid.Row="2">
            <ListBoxItem>
                <TextBox Text="Item1" />
            </ListBoxItem>
            <ListBoxItem>
                <TextBox Text="Item1" />
            </ListBoxItem>
            <ListBoxItem>
                <TextBox Text="Item1" />
            </ListBoxItem>
        </ListBox>
    </Grid>

</UserControl>

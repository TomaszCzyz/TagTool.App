<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:TagTool.App.Styles">

    <Design.PreviewWith>
        <controls:TagSearchBar />
    </Design.PreviewWith>

    <Style Selector="controls|TagSearchBar">
        <!-- Set Defaults -->
        <Setter Property="MaxWidth" Value="100"></Setter>
        <Setter Property="Template">
            <ControlTemplate>
                <Panel>
                    <ItemsControl
                        Items="qwe,qwe,qwe,qwe;qwe"
                        MaxWidth="{TemplateBinding MaxWidth}">

                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>


                    <TextBlock
                        Text="Templated Control" />
                </Panel>

            </ControlTemplate>
        </Setter>
    </Style>


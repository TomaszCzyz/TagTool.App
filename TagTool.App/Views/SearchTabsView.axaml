<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:TagTool.App.Views"
    mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
    x:Class="TagTool.App.Views.SearchTabsView">

    <TabControl>
        <TabItem
            Header="Search1"
            VerticalContentAlignment="Center">

            <local:TabContentView />
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <TextBlock VerticalAlignment="Center">Search2</TextBlock>
            </TabItem.Header>
            <StackPanel>
                <TextBlock
                    Text="I am in the triangle page ! I'll put a button to show you that each page contains what you want."
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center" />
                <Button>A button in the triangle page !</Button>
            </StackPanel>
        </TabItem>
    </TabControl>
</UserControl>

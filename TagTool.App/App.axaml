<Application
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TagTool.App"
    xmlns:themes="clr-namespace:Material.Styles.Themes;assembly=Material.Styles"
    x:Class="TagTool.App.App">

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark" />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml"/>
        <themes:MaterialTheme BaseTheme="Dark" PrimaryColor="Lime" SecondaryColor="Cyan" />
        <StyleInclude Source="avares://Material.Icons.Avalonia/App.xaml" />
        <StyleInclude Source="/Styles/TagChip.axaml" />
        <StyleInclude Source="/Styles/AutoCompleteBox.axaml" />
        <StyleInclude Source="/Styles/Button.axaml" />
    </Application.Styles>
</Application>

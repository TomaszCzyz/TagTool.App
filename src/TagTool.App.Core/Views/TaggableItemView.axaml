<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:TagTool.App.Core.Converters;assembly=TagTool.App.Core"
    xmlns:models="clr-namespace:TagTool.App.Core.Models;assembly=TagTool.App.Core"
    xmlns:viewModels="clr-namespace:TagTool.App.Core.ViewModels"
    xmlns:dataTemplates="clr-namespace:TagTool.App.Core.DataTemplates"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    x:Class="TagTool.App.Core.Views.TaggableItemView"
    x:CompileBindings="True"
    x:DataType="viewModels:TaggableItemViewModel"
    Name="UserControlRoot"
    d:DesignWidth="450"
    d:DesignHeight="150"
    mc:Ignorable="d"
    DragDrop.AllowDrop="True">
    <UserControl.Background>
        <SolidColorBrush Opacity="0" Color="White" />
    </UserControl.Background>
    <UserControl.Resources>
        <converters:TaggableItemToToIconConverter x:Key="TaggableItemToToIconConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <viewModels:TaggableItemViewModel />
    </Design.DataContext>

    <Border
        Name="DragDropInfoAreaBorder"
        Padding="6"
        Background="#00FFFFFF"
        BorderBrush="Transparent"
        BorderThickness="2">
        <Grid
            Name="TopMostGrid"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            ColumnDefinitions="30,Auto,*"
            RowDefinitions="Auto">

            <Image
                Name="IconImage"
                Grid.Column="0"
                Margin="0 0 2 0">
                <Image.Source>
                    <MultiBinding Converter="{StaticResource TaggableItemToToIconConverter}">
                        <Binding Path="TaggableItem" />
                        <Binding Path="#DisplayNameTextBlock.FontSize" />
                    </MultiBinding>
                </Image.Source>
            </Image>

            <TextBlock
                Name="DisplayNameTextBlock"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Foreground="Black"
                Inlines="{Binding Inlines}"
                Text="{Binding DisplayName}">
                <TextBlock.ContextFlyout>
                    <MenuFlyout>
                        <MenuItem Header="Show in Explorer" />
                        <Separator />
                        <MenuItem Header="Rename" />
                        <MenuItem Header="Copy" />
                    </MenuFlyout>
                </TextBlock.ContextFlyout>
            </TextBlock>

            <!-- Associated tags -->
            <Border
                Grid.Column="2"
                BorderBrush="Green"
                BorderThickness="0"
                IsVisible="{Binding AreTagsVisible}">
                <ItemsControl
                    Margin="0"
                    Padding="5 0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    ItemsSource="{Binding AssociatedTags}">
                    <ItemsControl.Styles>
                        <Style Selector="TextBlock">
                            <Setter Property="ContextFlyout">
                                <MenuFlyout>
                                    <MenuItem Header="Remove" Click="UntagMenuItem_OnClick">
                                        <MenuItem.Icon>
                                            <avalonia:MaterialIcon Kind="DeleteOutline" />
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </MenuFlyout>
                            </Setter>
                        </Style>
                    </ItemsControl.Styles>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <VirtualizingStackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.DataTemplates>
                        <dataTemplates:TagsTemplateSelector>
                            <DataTemplate x:Key="TagTool.App.Core.Models.TextTag" DataType="models:ITag">
                                <TextBlock
                                    Classes="Transparent"
                                    Margin="4 1"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="{StaticResource MyLightSecondary500}"
                                    IsTabStop="False"
                                    Text="{Binding DisplayText}" />

                            </DataTemplate>
                            <DataTemplate x:Key="TagTool.App.Core.Models.DayTag" DataType="models:ITag">
                                <TextBlock
                                    Classes="Transparent"
                                    Margin="4 1"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="{StaticResource MyLightPrimary400}"
                                    IsTabStop="False"
                                    Text="{Binding DisplayText}" />

                            </DataTemplate>
                            <DataTemplate x:Key="TagTool.App.Core.Models.DayRangeTag" DataType="models:ITag">
                                <TextBlock
                                    Classes="Transparent"
                                    Margin="4 1"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="DarkGreen"
                                    IsTabStop="False"
                                    Text="{Binding DisplayText}" />

                            </DataTemplate>
                            <DataTemplate x:Key="TagTool.App.Core.Models.MonthTag" DataType="models:ITag">
                                <TextBlock
                                    Classes="Transparent"
                                    Margin="4 1"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="DeepPink"
                                    IsTabStop="False"
                                    Text="{Binding DisplayText}" />

                            </DataTemplate>
                            <DataTemplate x:Key="TagTool.App.Core.Models.MonthRangeTag" DataType="models:ITag">
                                <TextBlock
                                    Classes="Transparent"
                                    Margin="4 1"
                                    VerticalAlignment="Center"
                                    FontSize="18"
                                    Foreground="HotPink"
                                    IsTabStop="False"
                                    Text="{Binding DisplayText}" />

                            </DataTemplate>
                        </dataTemplates:TagsTemplateSelector>
                    </ItemsControl.DataTemplates>
                </ItemsControl>
            </Border>
        </Grid>
    </Border>
</UserControl>

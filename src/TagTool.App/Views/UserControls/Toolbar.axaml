<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:TagTool.App.ViewModels.UserControls"
    x:CompileBindings="True"
    x:Class="TagTool.App.Views.UserControls.Toolbar"
    d:DesignWidth="800"
    d:DesignHeight="50"
    x:DataType="userControls:ToolbarViewModel"
    mc:Ignorable="d">

    <Design.DataContext>
        <userControls:ToolbarViewModel />
    </Design.DataContext>

    <StackPanel Orientation="Horizontal">
        <Button
            Name="AddFileButton"
            Content="AddFile"
            Click="AddFileButton_OnClick" />
        <Button
            Name="AdvancedTaggingFileButton"
            Content="AdvancedTaggingFileButton"
            Click="AdvancedTaggingFileButton_OnClick" />
        <Button Content="AddSearchTab" />
        <Button Content="AddNote" />
    </StackPanel>
</UserControl>

<UserControl
    d:DesignHeight="50"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="TagTool.App.Views.UserControls.Toolbar"
    x:CompileBindings="True"
    x:DataType="userControls:ToolbarViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:TagTool.App.ViewModels.UserControls"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <userControls:ToolbarViewModel/>
    </Design.DataContext>

    <StackPanel Orientation="Horizontal">
        <Button
            Click="AddFileButton_OnClick"
            Content="AddFile"
            Name="AddFileButton"/>
        <Button
            Click="AdvancedTaggingFileButton_OnClick"
            Content="AdvancedTaggingFileButton"
            Name="AdvancedTaggingFileButton"/>
        <Button Content="AddSearchTab"/>
        <Button Content="AddNote"/>
    </StackPanel>
</UserControl>

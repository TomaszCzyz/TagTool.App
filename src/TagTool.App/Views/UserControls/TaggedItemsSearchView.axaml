<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:TagTool.App.Converters"
    xmlns:userControls="clr-namespace:TagTool.App.ViewModels.UserControls"
    xmlns:templatedControls="clr-namespace:TagTool.App.Views.TemplatedControls"
    xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
    xmlns:models="clr-namespace:TagTool.App.Core.Models;assembly=TagTool.App.Core"
    xmlns:system="clr-namespace:System;assembly=System.Runtime"
    xmlns:userControls1="clr-namespace:TagTool.App.Views.UserControls"
    mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="700"
    x:Class="TagTool.App.Views.UserControls.TaggedItemsSearchView"
    x:Name="UserControlRoot">
    <UserControl.Resources>
        <converters:FileSizeToStringConverter x:Key="FileSizeToStringConverter" />
    </UserControl.Resources>

    <Design.DataContext>
        <userControls:TaggedItemsSearchViewModel />
    </Design.DataContext>

    <Grid
        ColumnDefinitions="*"
        RowDefinitions="Auto,Auto,*"
        Margin="4">

        <!-- Search Bar -->
        <Grid
            Grid.Column="0"
            Name="TopMostGrid"
            RowDefinitions="Auto"
            ColumnDefinitions="Auto,*,Auto"
            VerticalAlignment="Top">
            <Grid.KeyBindings>
                <KeyBinding Gesture="Ctrl+Enter" Command="{Binding CommitSearchCommand}" />
            </Grid.KeyBindings>
            <Grid.Styles>
                <Style Selector="ListBox">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="ItemsPanel">
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </Setter>
                </Style>
                <Style Selector="ListBoxItem">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="MaxHeight" Value="30" />
                </Style>
                <Style Selector="TextBox.Transparent">
                    <Setter Property="BorderThickness" Value="0" />
                    <Setter Property="Background" Value="Transparent" />

                    <!-- pointerover -->
                    <Style Selector="^:pointerover, ^:focus-within, ^:focus">
                        <Style Selector="^ /template/ Border#PART_BorderElement">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0" />
                        </Style>
                    </Style>
                </Style>
            </Grid.Styles>

            <Border
                Name="SearchBarBorder"
                Grid.ColumnSpan="3"
                ClipToBounds="True"
                CornerRadius="16"
                Background="{StaticResource MyLightPrimary300}"
                BorderBrush="{StaticResource MyLightPrimary600}"
                BorderThickness="2" />

            <Button
                Grid.Column="0"
                Padding="0"
                Background="Transparent"
                Margin="10 0 5 0"
                Command="{Binding CommitSearchCommand}">

                <avalonia:MaterialIcon
                    Kind="Magnify"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="20"
                    Height="20" />

            </Button>

            <ScrollViewer
                Grid.Column="1"
                VerticalScrollBarVisibility="Visible"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">

                <!-- entered tags box -->
                <ListBox
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    Name="TagsListBox"
                    Margin="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Items="{Binding EnteredTags}">
                    <ListBox.DataTemplates>
                        <DataTemplate DataType="models:Tag">
                            <templatedControls:TagChip
                                Margin="4 2"
                                Text="{Binding Name}"
                                DeleteCommand="{Binding #UserControlRoot.DataContext.RemoveTagCommand, FallbackValue=null}"
                                DeleteCommandParameter="{Binding .}" />

                        </DataTemplate>
                        <DataTemplate DataType="system:String">
                            <TextBox
                                Classes="Transparent"
                                Watermark="Next tag..."
                                Text="{Binding #UserControlRoot.DataContext.SearchText, FallbackValue=null}"
                                GotFocus="InputElement_OnGotFocus"
                                AttachedToLogicalTree="StyledElement_OnAttachedToLogicalTree" />

                        </DataTemplate>
                    </ListBox.DataTemplates>
                </ListBox>
            </ScrollViewer>

            <Button
                Grid.Column="2"
                Background="Transparent"
                Padding="0 5"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Click="Button_OnClick">

                <avalonia:MaterialIcon Kind="MoreVert" />
            </Button>

            <!-- Popup -->
            <Popup
                Name="SearchHelperPopup"
                Grid.Column="0"
                IsOpen="False"
                IsLightDismissEnabled="True"
                WindowManagerAddShadowHint="False"
                PlacementGravity="Bottom"
                PlacementTarget="{Binding #TopMostGrid}"
                Width="{Binding #TopMostGrid.Bounds.Width}">

                <Border
                    CornerRadius="16"
                    Padding="10"
                    BorderThickness="1"
                    Margin="0 -1 0 0"
                    ClipToBounds="True"
                    Background="{StaticResource MyLightPrimary300}"
                    BorderBrush="{StaticResource MyLightPrimary600}">

                    <Grid RowDefinitions="Auto,*,Auto,*,*" ColumnDefinitions="*">
                        <TextBlock
                            Grid.Row="0"
                            FontSize="12"
                            Text="Search results:" />

                        <ListBox
                            Name="SearchResultsListBox"
                            Grid.Row="1"
                            SelectionMode="Single"
                            HorizontalAlignment="Left"
                            SelectedItem="{Binding SelectedItemFromSearched}"
                            Items="{Binding SearchResults}">
                            <ListBox.DataTemplates>
                                <DataTemplate DataType="models:Tag">
                                    <Border
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        CornerRadius="4"
                                        BorderBrush="#0097A7"
                                        BorderThickness="1"
                                        Margin="1"
                                        ClipToBounds="True"
                                        DoubleTapped="InputElement_OnDoubleTapped">

                                        <TextBlock
                                            Margin="2 0"
                                            FontSize="18"
                                            FontFamily="avares://TagTool.App/Assets/Fonts#Lato"
                                            Foreground=""
                                            VerticalAlignment="Center"
                                            IsTabStop="False"
                                            Text="{Binding Name}"
                                            Inlines="{Binding Inlines}" />

                                    </Border>
                                </DataTemplate>
                            </ListBox.DataTemplates>
                        </ListBox>

                        <TextBlock
                            Grid.Row="2"
                            FontSize="12"
                            Text="Most popular tags:"
                            Margin="0 5 0 0" />

                        <ListBox
                            Grid.Row="3"
                            SelectionMode="Single"
                            SelectedItem="{Binding SelectedItemFromPopular}"
                            Items="{Binding PopularTags}">
                            <ListBox.DataTemplates>
                                <DataTemplate DataType="models:Tag">
                                    <Border
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        CornerRadius="4"
                                        BorderBrush="#0097A7"
                                        BorderThickness="1"
                                        Margin="1"
                                        ClipToBounds="True"
                                        DoubleTapped="InputElement_OnDoubleTapped">

                                        <TextBlock
                                            Margin="2 0"
                                            FontSize="12"
                                            FontFamily="avares://TagTool.App/Assets/Fonts#Lato"
                                            Foreground=""
                                            VerticalAlignment="Center"
                                            IsTabStop="False"
                                            Text="{Binding Name}"
                                            Inlines="{Binding Inlines}" />
                                    </Border>
                                </DataTemplate>
                            </ListBox.DataTemplates>
                        </ListBox>

                        <StackPanel
                            Grid.Row="4"
                            ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                            Orientation="Horizontal"
                            Spacing="5"
                            Margin="0 10 0 0">

                            <RadioButton>
                                <Label Content="Exclude" FontSize="12" Padding="0" />
                            </RadioButton>
                            <Button Padding="0">
                                <TextBlock Text="AddSpecialTag" />
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
            </Popup>
        </Grid>

        <!-- SearchResults -->
        <DataGrid
            Grid.Row="2"
            Name="SearchResultsDataGrid"
            HorizontalScrollBarVisibility="Auto"
            FontFamily="avares://TagTool.App/Assets/Fonts#Lato"
            CanUserResizeColumns="True"
            CanUserReorderColumns="True"
            RowBackground="Transparent"
            CanUserSortColumns="True"
            Items="{Binding Files}">
            <DataGrid.Styles>
                <Style Selector="DataGridCell">
                    <Setter Property="Padding" Value="2 0" />
                </Style>
            </DataGrid.Styles>
            <DataGrid.Columns>
                <!-- <DataGridCheckBoxColumn Width="60" Header="✔" CanUserResize="False" /> -->
                <DataGridTemplateColumn
                    Header="Name"
                    IsReadOnly="True"
                    CanUserSort="True"
                    Width="*">
                    <DataTemplate DataType="userControls:TaggableItemViewModel">
                        <userControls1:TaggableItemView Margin="-2 0 0 0" />
                    </DataTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header="Date Created"
                    IsReadOnly="True"
                    CanUserSort="True"
                    Width="Auto">
                    <DataTemplate DataType="userControls:TaggableItemViewModel">
                        <TextBlock
                            TextAlignment="Left"
                            VerticalAlignment="Center"
                            Text="{Binding DateCreated, StringFormat=\{0:yyyy/MM/dd hh:mm:ss\}}" />

                    </DataTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn
                    Header="Size"
                    Width="100"
                    IsReadOnly="True">
                    <DataTemplate DataType="userControls:TaggableItemViewModel">
                        <TextBlock
                            VerticalAlignment="Center"
                            TextAlignment="Right"
                            Text="{Binding Size, Converter={StaticResource FileSizeToStringConverter}}" />

                    </DataTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

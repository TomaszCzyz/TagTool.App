<UserControl
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:TagTool.App.ViewModels"
    xmlns:userControls="clr-namespace:TagTool.App.Views.UserControls"
    mc:Ignorable="d" d:DesignWidth="1600" d:DesignHeight="800"
    x:Class="TagTool.App.Views.UserControls.MainPanel">

    <Design.DataContext>
        <viewModels:MainWindowViewModel />
    </Design.DataContext>

    <Panel>
        <!-- <DockControl -->
        <!--     x:Name="DockControl" -->
        <!--     Layout="{Binding Layout}" -->
        <!--     Margin="4" /> -->
        <Grid ColumnDefinitions="2*,Auto,2*,Auto">
            <Grid.Styles>
                <Style Selector="GridSplitter">
                    <Setter Property="Background" Value="Transparent" />
                </Style>
            </Grid.Styles>
            <Grid Grid.Column="0" RowDefinitions="*, Auto, *">
                <userControls:TabContentView Grid.Row="0" />
                <GridSplitter Grid.Row="1" ResizeDirection="Rows" Height="4"/>
                <userControls:TabContentView Grid.Row="2" />
            </Grid>
            <GridSplitter Grid.Column="1" ResizeDirection="Columns" Width="4"/>
            <userControls:FileSystemView Grid.Column="2" />
        </Grid>


    </Panel>
</UserControl>

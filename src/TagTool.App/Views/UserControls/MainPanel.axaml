<UserControl
    d:DesignHeight="800"
    d:DesignWidth="1400"
    mc:Ignorable="d"
    x:Class="TagTool.App.Views.UserControls.MainPanel"
    x:CompileBindings="True"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:userControls="clr-namespace:TagTool.App.Views.UserControls"
    xmlns:viewModels="clr-namespace:TagTool.App.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Design.DataContext>
        <viewModels:MainWindowViewModel/>
    </Design.DataContext>

    <Grid ColumnDefinitions="*,Auto,*" RowDefinitions="*">
        <Grid.Styles>
            <Style Selector="GridSplitter">
                <Setter Property="Background" Value="Transparent"/>
            </Style>
        </Grid.Styles>

        <Grid
            ColumnDefinitions="*"
            Grid.Column="0"
            RowDefinitions="*,Auto,*">

            <userControls:TaggedItemsSearchView Grid.Row="0"/>

            <GridSplitter
                Grid.Row="1"
                Height="4"
                ResizeDirection="Rows"/>

            <userControls:TaggedItemsSearchView Grid.Row="2"/>
        </Grid>

        <GridSplitter
            Grid.Column="1"
            ResizeDirection="Columns"
            Width="4"/>

        <userControls:FileSystemView Grid.Column="2"/>
    </Grid>
</UserControl>

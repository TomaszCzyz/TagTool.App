<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="TagTool.App.Views.Dialogs.YesNoDialog"
    d:DesignWidth="250"
    d:DesignHeight="350"
    mc:Ignorable="d"
    ExtendClientAreaChromeHints="NoChrome"
    ExtendClientAreaTitleBarHeightHint="-1"
    ExtendClientAreaToDecorationsHint="True"
    ShowInTaskbar="False"
    SizeToContent="WidthAndHeight"
    Title="NameSpecialTagDialog"
    WindowStartupLocation="CenterOwner">

    <Grid
        Margin="10"
        ColumnDefinitions="Auto"
        RowDefinitions="Auto,Auto,Auto">

        <TextBlock Grid.Row="0" Name="QuestionTextBlock" />

        <CheckBox
            Name="RememberChoiceCheckBox"
            Grid.Row="1"
            Content="remember my choice" />

        <StackPanel
            Grid.Row="2"
            Margin="0 10 0 0"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="10">

            <Button Name="YesButton" Content="Yes" Click="YesButton_OnClick" />
            <Button Content="No" Click="NoButton_OnClick" />
        </StackPanel>
    </Grid>
</Window>
